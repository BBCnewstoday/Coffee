<Window x:Class="MDS.cBlp2.test.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Help" SizeToContent="WidthAndHeight" SnapsToDevicePixels="True" WindowStartupLocation="CenterOwner"
        WindowStyle="None" ResizeMode="NoResize" ShowInTaskbar="False" Loaded="Window_Loaded" MouseDown="Window_MouseDown">

    <Border BorderBrush="{StaticResource Gradient1}" BorderThickness="2" Background="{StaticResource Gradient3}">
        <StackPanel Margin="10">
            <Border Height="360" Width="600" BorderBrush="{StaticResource Gradient2}" BorderThickness="1">
                <WebBrowser Name="webBrowser" />
            </Border>
            <Button Content="_Close" Height="25" Name="btnClose" Width="100" Margin="0, 10, 0, 0" Click="btnClose_Click" />
        </StackPanel>
    </Border>
</Window>
