<Window x:Class="MDS.cBlp2.test.WorkingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MDS.cBlp2.test"
        Title="Help" SizeToContent="WidthAndHeight" SnapsToDevicePixels="True" WindowStartupLocation="CenterOwner"
        WindowStyle="None" ResizeMode="NoResize" ShowInTaskbar="False" MouseDown="Window_MouseDown">

    <Border BorderBrush="{StaticResource Gradient1}" BorderThickness="2" Background="{StaticResource Gradient3}">
        <Grid Width="200" Height="75">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Height="16" Width="16" Source="/Blpc;component/Resources/working.gif" local:AnimatedGIFBehaviour.SupportAnimatedGif="True" />
                <TextBlock Effect="{StaticResource TextShadow}" FontWeight="Bold" Foreground="{StaticResource TextColor2}" Text="Converting...." FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
